#.upper: Convertir a mayúscula
nombre = "El Tío Pepe"
nombre_mayus = nombre.upper()
print(nombre_mayus)

#.lower: Convertir a minúscula
nombre = "EL TÍO PEPE"
nombre_minus = nombre.lower()
print(nombre_minus)

#Len: Indica longitud de cadena
print(len(nombre))

#in/not in: Está o no en el texto
nombre = "Perry el Ornitorinco"
print("Perry" not in nombre)
nombre = "Perry el Ornitorinco"
print("Perry" in nombre)


